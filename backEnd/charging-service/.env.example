# 充电服务环境变量配置
NODE_ENV=development
CHARGING_SERVICE_PORT=8081

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/smart_charging
REDIS_URL=redis://localhost:6379

# OCPP配置
OCPP_VERSION=1.6
OCPP_WEBSOCKET_TIMEOUT=30
OCPP_HEARTBEAT_INTERVAL=300

# 主服务通信
MAIN_SERVICE_URL=http://localhost:8080
MAIN_SERVICE_API_KEY=your-api-key

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/charging-service.log