# 服务器配置
NODE_ENV=development
PORT=8080

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/smart_charging
REDIS_URL=redis://localhost:6379

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 支付宝配置
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_GATEWAY_URL=https://openapi.alipaydev.com/gateway.do

# 高德地图配置
AMAP_API_KEY=your-amap-api-key

# 第三方服务配置
SLIDER_VERIFY_API_URL=https://api.example.com/slider-verify
FACE_VERIFY_API_URL=https://api.example.com/face-verify
SMS_API_URL=https://api.example.com/sms

# 充电服务配置
CHARGING_SERVICE_URL=http://localhost:8081
CHARGING_SERVICE_PORT=8081

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS配置
CORS_ORIGINS=http://localhost:3000,https://smartcharging.com

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100