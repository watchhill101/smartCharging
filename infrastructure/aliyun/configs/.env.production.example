# 生产环境配置文件
# 复制此文件为 .env.production 并填入实际值

# 数据库配置
MONGODB_URI=mongodb://smartcharging:YourStrongMongoDBPassword2024!@dds-xxxxx.mongodb.rds.aliyuncs.com:3717/smart_charging
REDIS_URL=redis://smartcharging:YourStrongRedisPassword2024!@r-xxxxx.redis.rds.aliyuncs.com:6379

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
JWT_EXPIRES_IN=7d

# 支付宝配置
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_GATEWAY_URL=https://openapi.alipay.com/gateway.do

# 高德地图配置
AMAP_API_KEY=your-amap-api-key

# 阿里云OSS配置
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
OSS_BUCKET_NAME=smart-charging-static-xxxxxxxx
OSS_REGION=oss-cn-beijing
OSS_ENDPOINT=https://oss-cn-beijing.aliyuncs.com

# 第三方服务配置
SLIDER_VERIFY_API_URL=https://api.example.com/slider-verify
SLIDER_VERIFY_API_KEY=your-slider-verify-api-key
FACE_VERIFY_API_URL=https://api.example.com/face-verify
FACE_VERIFY_API_KEY=your-face-verify-api-key
SMS_API_URL=https://api.example.com/sms
SMS_API_KEY=your-sms-api-key

# 服务间通信
MAIN_SERVICE_API_KEY=your-main-service-api-key-2024

# 监控配置
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password-2024

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# 安全配置
CORS_ORIGINS=https://smartcharging.com,https://www.smartcharging.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# 缓存配置
CACHE_TTL_DEFAULT=300
CACHE_TTL_STATIONS=300
CACHE_TTL_USER_SESSION=604800

# 充电服务配置
OCPP_VERSION=1.6
OCPP_WEBSOCKET_TIMEOUT=30
OCPP_HEARTBEAT_INTERVAL=300

# 邮件配置（可选）
SMTP_HOST=smtp.aliyun.com
SMTP_PORT=465
SMTP_USER=noreply@smartcharging.com
SMTP_PASS=your-smtp-password
SMTP_FROM=智能充电 <noreply@smartcharging.com>